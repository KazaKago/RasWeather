<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="320.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.controller.WeatherController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#onClickRefresh" style="-fx-background-color: #00000000;">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@ic_refresh_black_48dp.png" />
                     </image>
                  </ImageView>
               </graphic>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="locationLabel" alignment="CENTER" text="東京都日野市 の天気" textFill="#37474f">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#onClickSettings" style="-fx-background-color: #00000000;">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@ic_settings_black_48dp.png" />
                     </image>
                  </ImageView>
               </graphic>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="todayDateLabel" text="今日（2016/11/16）" textFill="#37474f">
                     <font>
                        <Font size="14.0" />
                     </font></Label>
                  <ImageView fx:id="todayWeatherImage" fitHeight="80.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                     <image>
                        <Image url="@54%20Sun.png" />
                     </image></ImageView>
                  <Label fx:id="todayWeatherLabel" text="晴れ" textFill="#37474f">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font></Label>
                  <HBox alignment="CENTER">
                     <children>
                        <Label text="最高：" textFill="#37474f">
                           <font>
                              <Font size="13.0" />
                           </font></Label>
                        <Label fx:id="todayTemperatureMaxLabel" text="20℃" textFill="RED">
                           <font>
                              <Font size="13.0" />
                           </font></Label>
                        <Label text="最低：" textFill="#37474f">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <Label fx:id="todayTemperatureMinLabel" text="13℃" textFill="BLUE">
                           <font>
                              <Font size="13.0" />
                           </font></Label>
                     </children>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="tomorrowDateLabel" text="明日（2016/11/17）" textFill="#37474f">
                     <font>
                        <Font size="14.0" />
                     </font></Label>
                  <ImageView fx:id="tomorrowWeatherImage" fitHeight="80.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                     <image>
                        <Image url="@1%20Cloud.png" />
                     </image></ImageView>
                  <Label fx:id="tomorrowWeatherLabel" text="曇り" textFill="#37474f">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></Label>
                  <HBox alignment="CENTER">
                     <children>
                        <Label text="最高：" textFill="#37474f">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <Label fx:id="tomorrowTemperatureMaxLabel" text="20℃" textFill="RED">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <Label text="最低：" textFill="#37474f">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <Label fx:id="tomorrowTemperatureMinLabel" text="13℃" textFill="BLUE">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
      <Hyperlink fx:id="descriptionLabel" ellipsisString="...  続きを読む" onAction="#onClickDescription" style="-fx-border-color: #78909C; -fx-border-radius: 5;" text="LabelLabelLabelLabelLabelLabelLabelLabelLabelLabelLabelLabelLabelLabelLabelLabelLabel" textFill="#37474f" wrapText="true">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </Hyperlink>
      <Label fx:id="publishTimeLabel" contentDisplay="TOP" text="Label" textFill="#78909c">
         <VBox.margin>
            <Insets bottom="10.0" top="5.0" />
         </VBox.margin>
         <font>
            <Font size="12.0" />
         </font>
      </Label>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
