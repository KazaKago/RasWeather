<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="320.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.controller.WeatherController">
   <children>
      <Label fx:id="locationLabel" text="東京都日野市 の天気">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="todayDateLabel" text="今日（2016/11/16）" />
                  <ImageView fx:id="todayWeatherImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="todayWeatherLabel" text="晴れ" />
                  <HBox alignment="CENTER">
                     <children>
                        <Label text="最高：" />
                        <Label fx:id="todayTemperatureMaxLabel" text="20℃" textFill="RED" />
                        <Label text="最低：">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="todayTemperatureMinLabel" text="13℃" textFill="BLUE" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="tomorrowDateLabel" text="明日（2016/11/17）" />
                  <ImageView fx:id="tomorrowWeatherImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="tomorrowWeatherLabel" text="曇り" />
                  <HBox alignment="CENTER">
                     <children>
                        <Label text="最高：" />
                        <Label fx:id="tomorrowTemperatureMaxLabel" text="20℃" textFill="RED" />
                        <Label text="最低：">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="tomorrowTemperatureMinLabel" text="13℃" textFill="BLUE" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
       <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#onClickRefresh" prefHeight="40.0" prefWidth="301.0" text="更新" />
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</VBox>
